# RoninNVR Docker Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=ronin_nvr_user
POSTGRES_PASSWORD=ronin_pass
POSTGRES_DB=ronin_nvr

# =============================================================================
# SECURITY (CHANGE THESE IN PRODUCTION!)
# =============================================================================
# JWT secret key for authentication tokens
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-me-in-production-use-random-string

# Fernet encryption key for camera credentials
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Default admin password (leave empty to auto-generate on first run)
DEFAULT_ADMIN_PASSWORD=

# =============================================================================
# SERVER
# =============================================================================
DEBUG=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# =============================================================================
# ML PROCESSING
# =============================================================================
# Frames per second to analyze (lower = faster, less detections)
ML_DEFAULT_FPS=2.0

# Detection confidence threshold (0.0-1.0)
ML_CONFIDENCE_THRESHOLD=0.5

# Object classes to detect (comma-separated)
ML_CLASS_FILTER=person,car,truck,bus,motorcycle,bicycle,dog,cat

# =============================================================================
# TRANSCODING
# =============================================================================
# H.265 quality (18-32, lower = better quality, larger files)
TRANSCODE_CRF=28

# Encoding speed preset (ultrafast, fast, medium, slow, veryslow)
TRANSCODE_PRESET=medium

# =============================================================================
# STORAGE
# =============================================================================
# Retention policy
RETENTION_DAYS=30
# RETENTION_MAX_GB=500
